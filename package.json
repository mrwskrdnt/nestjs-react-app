{
  "name": "nextjs-react-app",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "start": "env-cmd -f .development.env ts-node --project tsconfig.server.json server/main.ts",
    "build": "rimraf dist & tsc --project tsconfig.server.json",
    "prod": "env-cmd -f .production.env node dist/main.js",
    "stage": "env-cmd -f .stage.env node dist/main.js",
    "format": "prettier --write \\\\\\\\\\\\\\\"server/**/*.ts\\\\\\\\\\\\\\\" \\\\\\\\\\\\\\\"test/**/*.ts\\\\\\\\\\\\\\\"",
    "lint": "eslint '{src,apps,libs,test}/**/*.ts' --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@emotion/cache": "^10.0.19",
    "@emotion/core": "^10.0.22",
    "@emotion/styled": "^10.0.23",
    "@nestjs/common": "^6.11.4",
    "@nestjs/core": "^6.11.4",
    "@nestjs/mongoose": "^6.3.1",
    "@nestjs/passport": "^6.1.1",
    "@nestjs/platform-express": "^6.11.4",
    "@react-ssr/core": "^0.19.9",
    "@react-ssr/nestjs-express": "^0.19.9",
    "@types/axios": "^0.14.0",
    "connect-flash": "^0.1.1",
    "create-emotion-server": "10.0.14",
    "env-cmd": "^10.0.1",
    "express-handlebars": "^3.1.0",
    "express-session": "^1.17.0",
    "mongoose": "^5.8.10",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "radiant-ui": "0.0.1-alpha.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.13.2",
    "@nestjs/schematics": "^6.8.1",
    "@nestjs/testing": "^6.10.14",
    "@types/connect-flash": "0.0.35",
    "@types/express": "^4.17.2",
    "@types/express-handlebars": "^3.1.0",
    "@types/express-session": "^1.15.16",
    "@types/jest": "^24.0.25",
    "@types/mongoose": "^5.7.0",
    "@types/node": "^13.1.6",
    "@types/passport": "^1.0.2",
    "@types/passport-local": "^1.0.33",
    "@types/react": "^16.9.19",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "babel-plugin-emotion": "^10.0.23",
    "cross-env": "^7.0.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.19.1",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.3.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "server",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
